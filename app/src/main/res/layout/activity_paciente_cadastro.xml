<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_paciente_cadastro"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="240dp"
        android:paddingHorizontal="50dp">

        <EditText
            android:id="@+id/editNomePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/botao_bege_borda_laranja"
            android:hint="Nome"
            android:padding="25dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editCPFPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="CPF"
            android:inputType="number"
            android:background="@drawable/botao_bege_borda_laranja"
            android:padding="25dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <!-- RG -->
        <EditText
            android:id="@+id/editRGPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="RG"
            android:inputType="number"
            android:background="@drawable/botao_bege_borda_laranja"
            android:padding="25dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <!-- Data de Nascimento -->
        <EditText
            android:id="@+id/editDataNascimentoPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Data de Nascimento"
            android:inputType="datetime"
            android:background="@drawable/botao_bege_borda_laranja"
            android:padding="25dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <!-- Telefone -->
        <EditText
            android:id="@+id/editTelefonePaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Telefone"
            android:inputType="phone"
            android:background="@drawable/botao_bege_borda_laranja"
            android:padding="25dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/editEmailPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/botao_bege_borda_laranja"
            android:padding="25dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <!-- Senha -->
        <EditText
            android:id="@+id/editSenhaPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:background="@drawable/botao_bege_borda_laranja"
            android:padding="25dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <!-- BotÃ£o Cadastrar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCadastrarPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:background="@drawable/botao_circular_laranja"
            android:paddingVertical="25dp"
            android:text="Cadastrar"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:stateListAnimator="@null" />

    </LinearLayout>
</ScrollView>
